<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/background_light"
    android:fitsSystemWindows="true">

    <!-- 头部 -->
    <RelativeLayout
        android:id="@+id/rl_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_window">
        <ImageView
            android:id="@+id/iv_title_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/ic_title_back" />
        <!--灯光按钮-->
        <ToggleButton
            android:id="@+id/tb_flash"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_flash_switch_select"
            android:layout_centerInParent="true"
            android:layout_alignParentEnd="true"
            android:textOff="@null"
            android:textOn="@null"
            android:minWidth="24dp"
            android:minHeight="24dp"
            android:layout_margin="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="扫描二维码/条形码"
            android:textColor="@android:color/background_light"
            android:textSize="18sp" />

    </RelativeLayout>

    <cn.bingoogolapple.qrcode.zbar.ZBarView
        android:layout_below="@id/rl_title"
        android:id="@+id/zbar_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:qrcv_verticalBias="0.3"
        app:qrcv_qrCodeTipText="请扫描二维码/条形码"
        app:qrcv_isShowTipTextAsSingleLine="true"
        app:qrcv_isOnlyDecodeScanBoxArea="true"
        app:qrcv_maskColor="#33333333"
        />

</RelativeLayout>